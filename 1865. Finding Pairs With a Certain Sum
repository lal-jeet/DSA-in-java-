class FindSumPairs {
private:
    vector<int>n1, n2;
    unordered_map<int, int>a;
public:
    FindSumPairs(vector<int>& nums1, vector<int>& nums2) {
        n1 = nums1;
        n2 = nums2;
        for(int x : n2){
            a[x]++;
        }
    }
    
    void add(int i, int v) {
        a[n2[i]]--;
        n2[i] += v;
        a[n2[i]]++;
    }
    
    int count(int tot) {
        int c = 0;;
        for(int x : n1){
            c += a[tot - x];
        }
        return c;
    }
};
