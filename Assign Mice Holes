class Solution {
    public int assignHole(int[] mices, int[] holes) {
        // code here
        // minimise max distance
        // by greedlily calculating the minimum largest distance
        Arrays.sort(mices);
        Arrays.sort(holes);
        int max = 0;
        
        for(int i=0; i<mices.length; i++){
            max = Math.max(max, Math.abs(holes[i]-mices[i]));
        }
        return max;
    }
};
