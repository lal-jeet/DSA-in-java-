class Solution {

    public int maxWater(int arr[]) {
        // Code Here
        int n = arr.length;
        int l = 0, r = n - 1;
        int ans = 0;
        while (l < r) {
            int w = r - l;
            int h = Math.min(arr[l], arr[r]);
            int area= h * w;
            ans = Math.max(ans, area);
            if (arr[l] < arr[r])
                l++;
            else
                r--;
        }
        return ans;
    }
}
